<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_area :name, class:"input-default", id:"name", autofocus: true, placeholder:"例) furima太郎", maxlength:"40" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birthday",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_area :postal_code, class:"input-default", id:"postal_code", placeholder:"例) 000-0000" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_area :address, class:"input-default", id:"address", placeholder:"例) 〇〇県〇〇市〇〇町〇〇番地" %>
  </div>
  
  <div class="field">
    <%= f.label :所属 %><br />
    <%= f.collection_select(:section_id, Section.all, :id, :name, {}, {class:"select-box", id:"user-section"}) %>
  </div>
  
  <div class="field">
    <%= f.label :職種 %><br />
    <%= f.collection_select(:job_id, Job.all, :id, :name, {}, {class:"select-box", id:"user-job"}) %>
  </div>

  <div class="field">
    <%= f.label :メール %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワードの確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
<p class='info-text'>※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。</p>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
